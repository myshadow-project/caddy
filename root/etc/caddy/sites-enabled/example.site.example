# Example site configuration
# Rename this file to *.site to enable it

example.com {
	# Use the block_china snippet
	import block_china {
		respond "Access denied from your region" 403
	}

	# Your site configuration
	root * /var/www/html
	file_server
	encode gzip

	log {
		output file /var/log/caddy/example.com.log
	}
}
